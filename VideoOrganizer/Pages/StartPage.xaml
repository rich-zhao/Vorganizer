<Page x:Class="VideoOrganizer.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VideoOrganizer"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="StartPage">

    <Grid>
        <Label x:Name="label" Content="Video Organizer" Margin="100,23,104,0" VerticalAlignment="Top" HorizontalAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="btnNewDatabase" Content="New Database" Margin="100,168,104,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="100" Click="btnNewDatabase_Click"/>
        <Button x:Name="btnLoadDatabase" Content="Load Database" Margin="100,209,104,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="100" Click="btnLoadDatabase_Click"/>

    </Grid>
</Page>
